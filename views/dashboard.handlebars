<div class="containerTitle">
    <h2 class="window">Your Dashboard</h2>
</div>

<div id="dashboard-container" class="main-container">

    <div id="myPosts-container">
        {{#each posts as | onepost | }}

        <div class="cardTitle flex">
            <div>
                {{onepost.title}}
            </div>
            <div class="postsign">
                Posted by {{onepost.user.username}}
                on {{onepost.date}}
            </div>
        </div>

       <div class="card">
            <div class="onePostDisplay-content">
                {{onepost.content}}
            </div>
       </div>
    {{/each}}
    </div>

    <div class="bthToCenter">
        <button class="add-newpost" type="button">+ New Post</button>
    </div> 

</div>

<script src="/js/dashboard.js"></script>