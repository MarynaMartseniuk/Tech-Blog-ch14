<div id="signup-container">
  
  <div>
    <h2>The Tech Blog</h2>
  </div>

  <div>
    <p>Create a New User:</p>
  </div>
  
  <div id="signup-card">
      <div>
        <h3>Sign Up</h3>
      </div>
    
      <form id="signup-form">
        <div>
          <label for="user-name-signup">username:</label>
          <input type="input" id="user-name-signup" />
        </div>

        <div>
          <label for="password-signup">password:</label>
          <input type="password" id="password-signup" />
        </div>

        <div>
          <button id="signup-submit" type="submit">Sign Up!</button>
        </div>
      </form>

      <div>
        <button id="change-to-login" type="submit">Login instead</button>
      </div>
  </div>

</div>

<script src="/js/signup.js"></script>