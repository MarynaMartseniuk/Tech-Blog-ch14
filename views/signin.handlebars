<div id="login-container">

  <div>
    <h2>The Tech Blog</h2>
  </div>

  <div id="login-card">
      <div>
        <h3>Sign Up</h3>
      </div>

      <form id="login-form">
        <div>
          <label for="user-name-login">username:</label>
          <input type="input" id="user-name-login" />
