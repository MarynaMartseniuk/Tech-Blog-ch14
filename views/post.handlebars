<div class="containerTitle">
    <h2 class="window">Your Dashboard</h2>
</div>

<div id="post-container" class="main-container">

    <div>
        <h3 class="cardTitle">Edit Post</h3>
    </div>

    <div id="editPost-card" class="card">

        <form id="editPost-form">
            <div>
                <label for="editPost-title">Title</label><br/>
                <input type="input" id="newPost-title" value="{{post.title}}" />
            </div>
            <div>
                <label for="editPost-content">Content</label><br/>
                <input type="input" id="editPost-content" value="{{post.content}}"/>
            </div>
            <div>
                <button id="editPost_update" class="card-btn" type="submit">Update Post</button>
            </div>
            <div>
                <input type="hidden" id="userID" value="{{user_id}}"/>
                <button id="editPost_delete" class="card-btn" type="submit">Delete</button>
            </div>
        </form>
    </div>

    <div class="bthToCenter">
        <button class="add-newpost" type="button">+ New Post</button>
    </div>

</div>

<script src="/js/post.js"></script>